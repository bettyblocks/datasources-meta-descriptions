        "summary": "Finds Document Objects",
        "description": "List Document Objects",
        "operationId": "findDocumentObjects",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DocumentObject"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
